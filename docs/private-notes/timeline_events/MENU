Below is the paste-ready code.

# mkdocs.yml
# ANEW Curriculum Master — Docs-as-code repo with Golden Rule enforcement

site_name: ANEW Curriculum Master
site_description: Single source of truth for ANEW curriculum content
site_author: ANEW
site_url: https://mandy1eigh007.github.io/curriculum_master/

repo_name: mandy1eigh007/curriculum_master
repo_url: https://github.com/mandy1eigh007/curriculum_master
edit_uri: edit/main/docs/

copyright: Copyright &copy; 2026 ANEW

theme:
  name: material
  language: en
  palette:
    primary: blue
    accent: green
  font: false  # avoid network calls for Google Fonts
  features:
    - navigation.tabs
    - navigation.sections
    - navigation.top
    - search.highlight
    - search.share
    - toc.follow

extra_css:
  - stylesheets/extra.css
  - styles/anew.css

plugins:
  - search
  - exporter:
      formats:
        pdf:
          enabled: true
          aggregator:
            enabled: true
            output: downloads/curriculum.pdf
            covers: none
          stylesheets:
            - docs/stylesheets/pdf.css
          concurrency: 1

markdown_extensions:
  - abbr
  - admonition
  - attr_list
  - def_list
  - footnotes
  - meta
  - md_in_html
  - tables
  - toc:
      permalink: true
      toc_depth: 3

  - pymdownx.arithmatex:
      generic: true
  - pymdownx.betterem:
      smart_enable: all
  - pymdownx.caret
  - pymdownx.details
  - pymdownx.highlight:
      anchor_linenums: true
      line_spans: __span
      pygments_lang_class: true
  - pymdownx.inlinehilite
  - pymdownx.keys
  - pymdownx.mark
